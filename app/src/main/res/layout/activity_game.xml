<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.GameActivity">

    <de.cobra.game.GameView
        android:id="@+id/game_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/control_area"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/control_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <!-- Steuerkreuz fÃ¼r die Steuerung -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/steer_up"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:background="#550000FF" />

            <View
                android:id="@+id/steer_down"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@id/steer_up"
                android:layout_centerHorizontal="true"
                android:background="#550000FF" />

            <View
                android:id="@+id/steer_left"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="38dp"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@id/steer_up"
                android:background="#550000FF" />

            <View
                android:id="@+id/steer_right"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="38dp"
                android:layout_toRightOf="@id/steer_up"
                android:background="#550000FF" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/game_over_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Over"
            android:textSize="24sp"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/restart_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restart"/>

        <Button
            android:id="@+id/main_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Menu"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pause_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pause Menu"
            android:textSize="24sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/pause_size_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size:"
            android:layout_marginTop="16dp"/>

        <SeekBar
            android:id="@+id/pause_size_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:progress="3"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/pause_speed_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed:"
            android:layout_marginTop="16dp"/>

        <SeekBar
            android:id="@+id/pause_speed_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:progress="3"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/pause_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/pause_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/resume_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resume"/>

        <Button
            android:id="@+id/restart_button_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restart"/>

        <Button
            android:id="@+id/main_menu_button_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Menu"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
